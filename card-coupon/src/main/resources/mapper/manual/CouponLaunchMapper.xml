<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.joycity.joyclub.card_coupon.mapper.CardCouponLaunchMapper">
    <sql id="limit">
        limit #{pageUtil.offset},#{pageUtil.pageSize}
    </sql>

    <sql id="CardCouponLaunchColumn">
        ccl.id , ccl.coupon_id , ccl.name , ccl.type , ccl.condition_amount ,
        ccl.pay_type  , ccl.pay_amount  , ccl.launch_num  ,ccl.max_receive,
        ccl.remain_num  , ccl.launch_start_time  , ccl.launch_end_time  ,
        ccl.effective_start_time  , ccl.effective_end_time,ccl.review_status  ,
        ccl.review_info  , ccl.confirm_flag  , ccl.forbid_flag  , ccl.confirm_time  ,
        ccl.forbid_time  , ccl.last_update  , ccl.delete_flag  , ccl.delete_time
    </sql>
    <sql id="name_type_status">
        cc.delete_flag = 0
        <if test="name != null">
            AND cc.name LIKE #{name}
        </if>
        <if test="type != null">
            AND cc.type = #{type}
        </if>
        -- 投放状态，1. 未审核，2 未投放，3 未开始，4 投放中，5 投放已过期，6 投放已中止
        <if test="status != null ">

            <if test="status == 1">
                AND ccl.review_status = 0
            </if>
            <if test="status == 2">
                AND ccl.review_status = 1
                AND ccl.confirm_flag = 0
            </if>
            <if test="status == 3">
                AND ccl.review_status = 1
                AND ccl.confirm_flag = 1
                AND now() <![CDATA[ <= ]]> ccl.launch_start_time
            </if>
            <if test="status == 4">
                AND ccl.review_status = 1
                AND ccl.confirm_flag = 1
                AND ccl.forbid_flag = 0
                AND now() <![CDATA[ > ]]> ccl.launch_start_time
                AND now() <![CDATA[ < ]]> ccl.launch_end_time
            </if>
            <if test="status == 5">
                AND ccl.review_status = 1
                AND ccl.confirm_flag = 1
                AND ccl.forbid_flag = 0
                AND now() <![CDATA[ > ]]> ccl.launch_end_time
            </if>
            <if test="status == 6">
                AND ccl.forbid_flag = 1
            </if>
        </if>
    </sql>


    <resultMap id="CardCouponLaunch" type="com.joycity.joyclub.card_coupon.modal.generated.CardCouponLaunch">

        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="coupon_id" jdbcType="BIGINT" property="couponId" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="type" jdbcType="TINYINT" property="type" />
        <result column="condition_amount" jdbcType="DECIMAL" property="conditionAmount" />
        <result column="max_receive" jdbcType="INTEGER" property="maxReceive" />
        <result column="pay_type" jdbcType="TINYINT" property="payType" />
        <result column="pay_amount" jdbcType="DECIMAL" property="payAmount" />
        <result column="launch_num" jdbcType="INTEGER" property="launchNum" />
        <result column="remain_num" jdbcType="INTEGER" property="remainNum" />
        <result column="launch_start_time" jdbcType="TIMESTAMP" property="launchStartTime" />
        <result column="launch_end_time" jdbcType="TIMESTAMP" property="launchEndTime" />
        <result column="effective_start_time" jdbcType="TIMESTAMP" property="effectiveStartTime" />
        <result column="effective_end_time" jdbcType="TIMESTAMP" property="effectiveEndTime" />
        <result column="review_status" jdbcType="TINYINT" property="reviewStatus" />
        <result column="review_info" jdbcType="VARCHAR" property="reviewInfo" />
        <result column="confirm_flag" jdbcType="BIT" property="confirmFlag" />
        <result column="forbid_flag" jdbcType="BIT" property="forbidFlag" />
        <result column="confirm_time" jdbcType="TIMESTAMP" property="confirmTime" />
        <result column="forbid_time" jdbcType="TIMESTAMP" property="forbidTime" />
        <result column="last_update" jdbcType="TIMESTAMP" property="lastUpdate" />
        <result column="delete_flag" jdbcType="BIT" property="deleteFlag" />
        <result column="delete_time" jdbcType="TIMESTAMP" property="deleteTime" />
    </resultMap>

    <select id="countByCouponNameAndCouponTypeAndStatus" resultType="java.lang.Long">
        SELECT count(*)
        FROM card_coupon_launch ccl
        INNER JOIN card_coupon cc ON cc.id = ccl.coupon_id
        <where>
            <include refid="name_type_status"/>
        </where>
    </select>

    <select id="selectByCouponNameAndCouponTypeAndStatus" resultType="com.joycity.joyclub.card_coupon.modal.ShowCouponLaunchInfo">
        SELECT
            <include refid="CardCouponLaunchColumn"/>,
            cc.name AS coupon_name, cc.type AS coupon_type
        FROM card_coupon_launch ccl
        INNER JOIN card_coupon cc ON cc.id = ccl.coupon_id
        <where>
            <include refid="name_type_status"/>
        </where>
    </select>
</mapper>